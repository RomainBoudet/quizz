        href="https://romainboudet.fr" target="_blank"><img style=" position: absolute; z-index: 2000; top: 10px; left: 10px; border: 0; width: 100px; " src="/img/RB.png" alt="logo RB"></a>


    <header id="header"
        class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-primary text-white border-bottom shadow-sm">
        <h1 class="h5 my-0 mr-md-auto font-weight-normal"></h1>
        <nav id="navbar" class="navbar header navbar-inverse navbar-fixed-top align-items-center">
            <a class="p-2 text-white" href="/">Accueil</a>
            <a class="p-2 text-white" href="/tags">Sujets</a>
             <%# pour vérifier le status de l'utilisateur, on utilise la variable user qu'on a ajouté dans reponse.locals côté express %>
            <%# elle est forcément définie, on peut y accéder directement %>
            <% if (user !== false) {%>
                <a class="p-2 text-white" href="/profile">Bonjour <%= user.firstname %></a>
                <a class="p-2 text-white" href="/logout">Se déconnecter</a>
                <% if (user.role === 'admin') {%>
                    <a class="p-2 text-white" href="/admin">Admin</a>
                <% } %>
            <% } else { %>
                <a class="p-2 text-white" href="/signup">S'inscrire</a>
                <a class="p-2 text-white" href="/login">Se connecter</a>
            <% } %>

        </nav>
    </header>
